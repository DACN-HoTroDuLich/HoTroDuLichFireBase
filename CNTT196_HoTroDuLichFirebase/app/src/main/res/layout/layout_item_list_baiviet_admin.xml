<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgViewAvatar_mainAdmin"
                android:layout_width="130dp"
                android:layout_height="130dp"
                tools:srcCompat="@drawable/icon2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="13dp">

                <TextView
                    android:id="@+id/tvTenUser_mainAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngô Ngọc Minh Sang"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvDateTime_mainAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21/12/2023 - 19:30"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvTieuDe_mainAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Đất Nước Việt Nam Tôi Yêu Muốn Đời"
                    android:textSize="18dp"
                    android:textStyle="italic|bold"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnXemChiTiet_mainAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Xem Chi Tiết"
            android:background="#1e90ff"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>