<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/WhiteSmoke">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:id="@+id/imgNguoiDung_travel_custom_fragHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_avarta"
                        android:src="@drawable/icon2"/>
                    <!--            android:background="@drawable/background_avarta"-->
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:id="@+id/tvTenNguoiDung_travel_custom_fragHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="Ten nguoi dung"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNgayDang_travel_custom_fragHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ngay dang"
                        android:textSize="15dp"
                        android:layout_marginTop="-35dp"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgView_travel_custom_fragHome"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/default_image_empty" />
            <TextView
                android:id="@+id/tvTieuDe_travel_custom_fragHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tieu de"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_location_on_24" />

                <TextView
                    android:id="@+id/tvDiaChi_travel_custom_fragHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Dia chi"
                    android:textSize="16dp"
                    android:textStyle="bold|italic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_monetization_on_24" />

                <TextView
                    android:id="@+id/tvPrice_travel_custom_fragHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Chi phi"
                    android:textSize="16dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>